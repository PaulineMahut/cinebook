datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  userMovies UserMovie[]
}

model Movie {
    id          Int        @id @default(autoincrement())
    title       String
    overview    String
    voteAverage Float
    tmdbId     Int @unique
    userMovies  UserMovie[]
}

model UserMovie {
    id        Int   @id @default(autoincrement())
    userId    Int
    movieId   Int
    user      User  @relation(fields: [userId], references: [id])
    movie     Movie @relation(fields: [movieId], references: [id], onDelete: Cascade) // onDelete: Cascade pour supprimer l'association
}
