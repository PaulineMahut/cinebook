datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  movies    Movie[]
}

model Movie {
  id          Int        @id @default(autoincrement())
  title       String
  overview    String?
  voteAverage Float?
  tmdbId      Int     @unique
  userId    Int     
  user      User    @relation(fields: [userId], references: [id])
}
